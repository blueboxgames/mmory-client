{
	"type": "app",
	"config": "airmobile",
	"compilerOptions": {
		// "omit-trace-statements": true,
		// "verbose-stacktraces": true,
		// "advanced-telemetry": true,
		// "strict": true,
		// "warnings": true,
		"default-frame-rate": 40,
		"default-background-color": "0x000000",
		"library-path": [
			"libs",
			"exts"
		],
		"external-library-path": [
			"exts"
		],
		"output": "bin/release.swf",
		"optimize": true
	},
	"application": "bin/application.xml",
	"files": [
		"src/Main.as"
	],
	// "copySourcePathAssets": true,
	"airOptions": {
		"extdir": [
			"exts"
		],
		"files": [
			{
				"file": "files/icons/android/icons",
				"path": "icons"
			},
			{
				"file": "files/assets",
				"path": "assets"
			}
		],
		"android": {
			"listen": true,
			"output": "dist/app.apk",
			"signingOptions": {
				"storetype": "pkcs12",
				"keystore": "cert/android.p12"
			}
		},
		"ios": {
			"output": "dist/app.ipa",
			"target": "ipa-ad-hoc",
			"signingOptions": {
				"storetype": "pkcs12",
				"keystore": "files/cert/TOD-Distribution-Certificate.p12",
				"provisioning-profile": "files/cert/Bluebox_K2K_Adhoc_Profile.mobileprovision"
			}
		}
	}
}